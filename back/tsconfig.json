{
  "compilerOptions": {
    "target": "ES2020",                     // Reasonable modern JS output
    "module": "commonjs",                   // Required for Node.js
    "outDir": "./dist",                     // Where compiled JS files go
    "rootDir": "./",                        // Root source folder
    "esModuleInterop": true,                // Enables default imports
    "allowSyntheticDefaultImports": true,
    "strict": true,                         // Enable type safety
    "moduleResolution": "node",             // Required for resolving node_modules
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,              // If you're importing JSON files
    "types": ["node", "jest"]               // Include Node.js and Jest typings
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
